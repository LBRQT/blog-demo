{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
        {% if error %}
        <div class="border border-danger p-2 rounded-top text-danger absolute w-25 m-auto">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    <form action="{{ path('app_login') }}" method="post" class="container text-center border p-5 w-25">
        <h2> Connection </h2>
        <div class="form-group"> 
            <label for="username">Email:</label>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>

            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password" name="_password"/>
            
         <button type="submit" class="btn btn-primary m-auto mt-2">login</button>
        </div>
        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}
        


    </form>
{% endblock %}
